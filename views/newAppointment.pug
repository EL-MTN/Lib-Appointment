html
    head
        link(rel="icon" href="/library.png" type="image/png")
        title Appointment Form
        style
            include main.css
            include newAppointment.css
    body
        form(action="/form-submit" method="POST")
            div(class="field")
                label(for="firstname") First Name:  
                input(type="text" name="firstname" value=firstname placeholder= "Your First Name" required)

            div(class="field")
                label(for="lastname") Last Name: 
                input(type="text" name="lastname" value = lastname placeholder="Your Last Name" required)

            div(class="field")
                label(for="email") Email: 
                input(type="email" name="email" value = email placeholder="Your E-mail" required)

            div(class="field")
                label(for="date") Choose Date:
                input(type="date" name="date" value=date required)

            div(class="field")
                label(for="time_start") Choose Start time: 
                input(type="time" name="time_start" required)

            div(class="field")
                label(for="time_start") Choose End time: 
                input(type="time" name="time_end" required)
            input(type="submit")
        div(id="error")=error